{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true
            }
        ],
        "react/jsx-filename-extension": [
            1,
            { "extensions": [".js", ".jsx"] }
        ],
        "import/no-unresolved": [
            2,
            { "ignore": [".png$", ".webp$", ".jpg$"] }
        ],
        "global-require": "off",
        "no-console": "off"
    }
}